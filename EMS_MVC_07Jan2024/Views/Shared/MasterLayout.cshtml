
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <link href="~/ClientLib/css/bootstrap.css" rel="stylesheet" />
    <link href="~/ClientLib/toastr/toastr.min.css" rel="stylesheet" />


    <script src="~/ClientLib/jquery/jquery.js"></script>
    <script src="~/ClientLib/toastr/toastr.min.js"></script>


    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">EMS</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Home</a>
                    </li>
                    @if (HttpContext.Current.User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link active" style="text-decoration:none" href="#">
                                <strong>Welcome - @HttpContext.Current.User.Identity.Name</strong>
                            </a>
                        </li>
                    <li class="nav-item">
                            <a class="nav-link" style="text-decoration:none" href="#">
                                @using (Html.BeginForm("Logout","Account",FormMethod.Post)) { 
                                  <input type="submit" value="Logout" class="btn btn-sm btn-danger" />
                                }
                            </a>
                        </li>
                    }
                </ul>

            </div>
        </div>
    </nav>

    <div class="container-fluid mt-5">
        @RenderBody()
    </div>

    @*footer*@

    @RenderSection("Script", false)

    @Html.Partial("_Notification")

</body>
</html>
